    <script>
        // --- JAVASCRIPT LOGIC ---

        // 1. The Data (Mock Database of highly rated games)
        // In a real app, you would fetch this from the Steam API
        const gamesData = [
            {
                title: "Baldur's Gate 3",
                genre: "RPG",
                review: "Overwhelmingly Positive",
                image: "https://shared.akamai.steamstatic.com/store_item_assets/steam/apps/1086940/header.jpg",
                link: "https://store.steampowered.com/app/1086940/Baldurs_Gate_3/"
            },
            {
                title: "Hades",
                genre: "Action",
                review: "Overwhelmingly Positive",
                image: "https://shared.akamai.steamstatic.com/store_item_assets/steam/apps/1145360/header.jpg",
                link: "https://store.steampowered.com/app/1145360/Hades/"
            },
            {
                title: "Stardew Valley",
                genre: "Indie",
                review: "Overwhelmingly Positive",
                image: "https://shared.akamai.steamstatic.com/store_item_assets/steam/apps/413150/header.jpg",
                link: "https://store.steampowered.com/app/413150/Stardew_Valley/"
            },
            {
                title: "Terraria",
                genre: "Indie",
                review: "Overwhelmingly Positive",
                image: "https://shared.akamai.steamstatic.com/store_item_assets/steam/apps/105600/header.jpg",
                link: "https://store.steampowered.com/app/105600/Terraria/"
            },
            {
                title: "Portal 2",
                genre: "Strategy",
                review: "Overwhelmingly Positive",
                image: "https://shared.akamai.steamstatic.com/store_item_assets/steam/apps/620/header.jpg",
                link: "https://store.steampowered.com/app/620/Portal_2/"
            },
            {
                title: "Hollow Knight",
                genre: "Action",
                review: "Overwhelmingly Positive",
                image: "https://shared.akamai.steamstatic.com/store_item_assets/steam/apps/367520/header.jpg",
                link: "https://store.steampowered.com/app/367520/Hollow_Knight/"
            },
            {
                title: "Factorio",
                genre: "Strategy",
                review: "Overwhelmingly Positive",
                image: "https://shared.akamai.steamstatic.com/store_item_assets/steam/apps/427520/header.jpg",
                link: "https://store.steampowered.com/app/427520/Factorio/"
            },
            {
                title: "The Witcher 3",
                genre: "RPG",
                review: "Overwhelmingly Positive",
                image: "https://shared.akamai.steamstatic.com/store_item_assets/steam/apps/292030/header.jpg",
                link: "https://store.steampowered.com/app/292030/The_Witcher_3_Wild_Hunt/"
            }
        ];

        const grid = document.getElementById('game-grid');
        const buttons = document.querySelectorAll('.filter-btn');

        // 2. Function to generate HTML for games
        function renderGames(filter = 'all') {
            grid.innerHTML = ''; // Clear current content

            const filteredGames = filter === 'all' 
                ? gamesData 
                : gamesData.filter(game => game.genre === filter);

            filteredGames.forEach(game => {
                const card = document.createElement('div');
                card.className = 'game-card';
                
                card.innerHTML = `
                    <img src="${game.image}" alt="${game.title}" class="card-image">
                    <div class="card-content">
                        <h3 class="game-title">${game.title}</h3>
                        <p class="game-genre">${game.genre}</p>
                        <p class="review-score">â˜… ${game.review}</p>
                        <a href="${game.link}" target="_blank" class="steam-link">View on Steam</a>
                    </div>
                `;
                grid.appendChild(card);
            });
        }

        // 3. Function to handle button clicks
        function filterGames(category) {
            // Remove active class from all buttons
            buttons.forEach(btn => btn.classList.remove('active'));
            
            // Find the clicked button (or the one matching the category) and add active class
            event.target.classList.add('active');

            renderGames(category);
        }

        // Initial render
        renderGames();

    </script>
